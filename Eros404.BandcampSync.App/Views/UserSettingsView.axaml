<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Eros404.BandcampSync.App.Views.UserSettingsView">
    <DockPanel>
        <Button DockPanel.Dock="Bottom" Command="{Binding Save}">
            Save
        </Button>
        <StackPanel>
            <TextBlock Text="Email" Margin="4"></TextBlock>
            <TextBox AcceptsReturn="False"
                     Text="{Binding Email}"
                     Margin="4"></TextBox>
            <TextBlock Text="Bandcamp identity cookie" Margin="4"></TextBlock>
            <TextBox AcceptsReturn="False"
                     PasswordChar="*"
                     Text="{Binding IdentityCookie}"
                     Margin="4"></TextBox>
        </StackPanel>
    </DockPanel>
</UserControl>
